@model FundingRequestViewModel
@{
    ViewData["Title"] = "Funding Request Confirmation";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Your funding request has been submitted successfully!</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Request ID</dt>
        <dd class="col-sm-9">@Model.RequestID</dd>
        <dt class="col-sm-3">Submitted At</dt>
        <dd class="col-sm-9">@Model.SubmittedAt.ToString("yyyy-MM-dd HH:mm:ss")</dd>
        <dt class="col-sm-3">Requested Amount</dt>
        <dd class="col-sm-9">@Model.RequestedAmount.ToString("C")</dd>
        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to Dashboard</a>
</div>
