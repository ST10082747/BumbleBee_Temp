@model IEnumerable<BumbleBeeFoundation.Models.Company>

@{
    ViewData["Title"] = "Company Management";
}

<h1>Company Management</h1>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.CompanyName)</th>
            <th>@Html.DisplayNameFor(model => model.ContactEmail)</th>
            <th>@Html.DisplayNameFor(model => model.ContactPhone)</th>
            <th>@Html.DisplayNameFor(model => model.DateJoined)</th>
            <th>@Html.DisplayNameFor(model => model.Status)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CompanyName)</td>
                <td>@Html.DisplayFor(modelItem => item.ContactEmail)</td>
                <td>@Html.DisplayFor(modelItem => item.ContactPhone)</td>
                <td>@Html.DisplayFor(modelItem => item.DateJoined)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>
                    <a asp-action="CompanyDetails" asp-route-id="@item.CompanyID" class="btn btn-info btn-sm">Details</a>
                    @if (item.Status == "Pending")
                    {
                        <form asp-action="ApproveCompany" asp-route-id="@item.CompanyID" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-success btn-sm">Approve</button>
                        </form>
                        <form asp-action="RejectCompany" asp-route-id="@item.CompanyID" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
    <a asp-action="Dashboard" asp-controller="Admin" class="btn btn-primary">Back To Dashboard</a>
</table>
